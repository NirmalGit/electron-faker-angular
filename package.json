{
  "name": "electron-faker-angular",
  "version": "1.0.0",
  "private": true,
  "description": "Enterprise Angular 20 + Electron 38 + Bootstrap + Angular Material desktop app",
  "main": "dist-electron/main.js",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "ng:serve": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "electron:serve": "cross-env ELECTRON_DEV=true concurrently \"ng serve\" \"npm run electron:serve:dev\"",
    "electron:serve:dev": "tsc -p electron/tsconfig.json && electron dist-electron/main.js",
    "electron:build": "tsc -p electron/tsconfig.json",
    "electron:dist": "npm run build && npm run electron:build && electron-builder",
    "e2e": "ng e2e"
  },
  "dependencies": {
    "@angular/animations": "^20.3.0",
    "@angular/cdk": "^20.2.8",
    "@angular/common": "^20.3.0",
    "@angular/compiler": "^20.3.0",
    "@angular/core": "^20.3.0",
    "@angular/forms": "^20.3.0",
    "@angular/material": "^20.2.8",
    "@angular/platform-browser": "^20.3.0",
    "@angular/router": "^20.3.0",
    "@popperjs/core": "^2.11.8",
    "bootstrap": "^5.3.3",
    "electron-log": "^5.4.3",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular/build": "^20.3.4",
    "@angular/cli": "^20.3.4",
    "@angular/compiler-cli": "^20.3.0",
    "@playwright/test": "1.56.0",
    "@types/electron": "^1.4.38",
    "@types/jasmine": "~5.1.0",
    "angular-cli-ghpages": "^2.0.3",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^38.2.2",
    "electron-builder": "^25.0.0",
    "jasmine-core": "~5.9.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "playwright-ng-schematics": "^2.1.1",
    "ts-node": "^10.9.2",
    "typescript": "~5.9.2"
  },
  "build": {
    "appId": "com.electronfaker.app",
    "productName": "Electron Faker Angular",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist-electron/**/*",
      "dist/electron-faker/browser/**/*"
    ],
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  }
}
